<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<div class="admin-dashboard">
    <header>
        <h1>Administrator Dashboard</h1>
    </header>

    <main>
        <section id="category">
            <h2>Manage Categories</h2>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#categoryModal" data-bs-whatever="@mdo">Add Category</button>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each allCategory}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.description}}</td>
                        <td>
                        <form action="/category/delete/{{this._id}}" method="post" style="display: inline;">
                        <button type="submit">Delete</button>
                        </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
        <section id="tag">
            <h2>Manage Tags</h2>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#tagModal" data-bs-whatever="@fat">Add Tag</button>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each allTags}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>
                        <form action="/tag/delete/{{this._id}}" method="post" style="display: inline;">
                        <button type="submit">Delete</button>
                        </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
        <section id="articles">
            <h2>Manage Articles</h2>
            <button>Add Article</button>
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each getPendingArticles}}
                    <tr>

                        <td>{{this.title}}</td>
                        <td>{{this.status}}</td>
                        <td>
                            <button>View</button>
                            <button>Edit</button>
                            <button>Delete</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
        <section id="editor">
            <h2>Manage editor</h2>
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each getEditorsOnly}}
                    <tr>
                        <input type="hidden" value="{{this._id}}" id="editorId{{@index}}">
                        <td>{{this.username}}</td>
                        <td>{{#each avaiCategory}}
                        {{this.name}}
                        {{/each}}</td>
                        <td>
                          <button onClick="copyValue('editorId{{@index}}')" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editorModal" data-bs-whatever="@fat" onclick="">Add Category</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
        <section id="users">
            <h2>Manage Users</h2>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#userModal" data-bs-whatever="@getbootstrap">Add user</button>
            <table>
                <thead>
                    <tr>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Full Name</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each getAllUsers}}
                    <tr>
                        <td>{{this.username}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.full_name}}</td>
                        <td>{{this.role}}</td>
                        <td>
                            <form action="/user/delete/{{this._id}}" method="post" style="display: inline;">
                            <button>Delete</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
    </main>
</div>
